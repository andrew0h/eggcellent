LIST DIRECTORIES	ls -d */
UPDATE			sudo apt-get update
FIND			sudo find `pwd` -name
CHECK OWNERSHIP		ls -l some_file OR /some/dir/ @@@http://linuxcommand.org/lts0070.php@@@
CHANGE DIR OWNERSHIP	find /opt/lampp/htdocs -type d -exec chmod 755 {} \;
CHANGE FILE OWNERSHIP	find /opt/lampp/htdocs -type f -exec chmod 644 {} \;
